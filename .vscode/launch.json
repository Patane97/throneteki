{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Client)",
            "type": "msedge",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Launch (Lobby)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false
        },
        {
            "name": "Launch (Game)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/gamenode/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false
        },
        {
            "name": "Docker Launch (Client)",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}",
            "preLaunchTask": "Docker Compose Up (Dev)",
            "postDebugTask": "Docker Compose Down (Dev)"
        },
        {
            "name": "Docker Attach (Lobby)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app/lobby"
        },
        {
            "name": "Docker Attach (Game)",
            "type": "node",
            "request": "attach",
            "port": 9339,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app/node"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jasmine/bin/jasmine.js",
            "env": {
                "JASMINE_CONFIG_PATH": "./jasmine.json"
            },
            "cwd": "${workspaceRoot}"
        }
    ]
}