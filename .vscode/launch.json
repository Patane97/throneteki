{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (Lobby Server)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false
        },
        {
            "name": "Launch (Game Server)",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/gamenode/index.js",
            "stopOnEntry": false,
            "args": [],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "runtimeArgs": [
                "--nolazy"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "internalConsole",
            "sourceMaps": false
        },
        {
            "name": "Attach (Docker Game)",
            "type": "node",
            "request": "attach",
            "port": 9339,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app/lobby/server/gamenode"
        },
        {
            "name": "Attach (Docker Lobby)",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app/lobby"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach by Process ID",
            "processId": "${command:PickProcess}"
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:4000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/jasmine/bin/jasmine.js",
            "env": {
                "JASMINE_CONFIG_PATH": "./jasmine.json"
            },
            "cwd": "${workspaceRoot}"
        }
    ],
    "compounds": [
        {
            "name": "Docker Launch",
            "configurations": ["Attach (Docker Lobby)", "Attach (Docker Game)"],
            "preLaunchTask": "Docker Compose Up (Dev)",
            "stopAll": true
        }
    ]
}