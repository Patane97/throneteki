{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "docker-compose",
        "label": "Docker Compose Up (Dev)",
        "dockerCompose": {
          "up": {
            "detached": true,
            "build": true
          },
          "files": [
            "${workspaceFolder}/docker-compose.yml",
            "${workspaceFolder}/docker-compose.dev.yml"
          ]
        },
        "presentation": {
          "reveal": "always"
        }
      },
      {
        "type": "docker-compose",
        "label": "Docker Compose Down (Dev)",
        "dockerCompose": {
          "down": {
            "removeImages": "local",
            "removeVolumes": true
          },
          "files": [
            "${workspaceFolder}/docker-compose.yml",
            "${workspaceFolder}/docker-compose.dev.yml"
          ]
        },
        "presentation": {
          "reveal": "always"
        }
      }
      // TODO: Add "Initialite Docker" task to create external "throneteki_mongodb" volume, create external "throneteki_card" volume, and run fetch data
    ]
  }