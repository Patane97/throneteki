{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "docker-compose",
        "label": "Docker Compose Up (Dev)",
        "dockerCompose": {
          "up": {
            "detached": true,
            "build": true
          },
          "files": [
            "${workspaceFolder}/docker-compose.yml",
            "${workspaceFolder}/docker-compose.dev.yml"
          ]
        },
        "presentation": {
          "reveal": "always"
        }
      },
      {
        "type": "docker-compose",
        "label": "Docker Compose Down (Dev)",
        "dockerCompose": {
          "down": true,
          "files": [
            "${workspaceFolder}/docker-compose.yml",
            "${workspaceFolder}/docker-compose.dev.yml"
          ]
        },
        "presentation": {
          "reveal": "always"
        }
      }
    ]
  }